{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "server/server.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/medicine", "dest": "server/server.mjs" },
    { "src": "/(.*)", "dest": "client/$1" }
  ]
}